<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lifendry.laundry.lifendry">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".ui.settingserver.ServerSettingActivity">
        </activity>
        <activity android:name=".ui.historytransaction.HistoryTransactionActivity"/>
        <activity android:name=".ui.progresstransaction.ProgressTransactionActivity"/>
        <activity android:name=".ui.unfinishedtransaction.UnfinishedTransactionActivity"/>
        <activity android:name=".ui.detailtransaction.DetailTransactionActivity"/>
        <activity android:name=".ui.info.InfoActivity"/>
        <activity android:name=".ui.quantity.QuantityActivity"/>
        <activity android:name=".ui.menu.detail.DetailMenuActivity"/>
        <activity android:name=".ui.menu.MenuActivity"/>
        <activity android:name=".ui.newtransaction.NewTransactionActivity"/>
        <activity android:name=".ui.worker.detail.DetailWorkerActivity"/>
        <activity android:name=".ui.worker.form.FormWorkerActivity"/>
        <activity android:name=".ui.worker.WorkerActivity"/>
        <activity android:name=".ui.customer.detail.DetailCustomerActivity"/>
        <activity android:name=".ui.customer.form.FormCustomerActivity"/>
        <activity android:name=".ui.customer.CustomerActivity"/>
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity"/>
    </application>

</manifest>